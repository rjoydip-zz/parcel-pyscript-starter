{
    "include": [
        "src/**/*",
        "parcel.d.ts"
    ],
    "exclude": ["node_modules/**/*"],
    "compilerOptions": {
        "target": "es2021",
        "outDir": "./dist",
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "moduleResolution": "Node",
        "noEmitOnError": false,
        "declaration": true,
        "declarationMap": false,
        "isolatedModules": true,
        "strict": true,
    }
}